<div class="container-fluid">

  <div class="jumbotron text-center">

    <h1 class="top-title">News Scraper</h1>

  </div>

</div>


{{#unless articles}}

<div class="container-fluid">

  <div class="row">

    <div class="empty-articles text-center">

      <h1>Please click on Scrape</h1>

    </div>

  </div>

</div>

{{/unless}}



{{#if articles}}

<div class="container-fluid">

  <div class="row">

    <div class="col-md-12">

      {{#each articles}}

      <div class="panel panel-primary">

        <div class="panel-heading">

          <div class="row">

            <div class="col-md-10">

              <h3><a href="{{this.link}}" class="headline">{{this.title}}</a></h3>

            </div>

            <div class="col-md-2">

              <button class="btn btn-warning comment-button" data-id="{{this._id}}">Add Note</button>

              <button class="btn btn-success save-button" data-id="{{this._id}}">Save Article</button>

            </div>

          </div>

        </div>

      </div>

      {{/each}}

    </div>

  </div>

</div>



{{/if}}



{{#each articles}}

<div id="modal_{{this._id}}" class="modal">

  <div class="modal-dialog">

    <div class="modal-content">

      <div class="modal-header">

        <button class="modalClose close" data-id="{{this._id}}"><span class="close">&times;</span></button>

        <h4 class="modal-title blackText" id="sentModalLabel">{{this.title}}</h4>

      </div>

      <div class="modal-body">

        <div class="panel panel-primary">

          <div class="panel-heading">

            <h4>Add a note:</h4>

          </div>

          <div class="panel-body" id="text-container">

            <textarea type="text" id="bodyinput-{{this._id}}" name="body" class="noteInput"></textarea>

            <br>

            <br>

            <button data-id={{this._id}} id="savenote" class="btn btn-primary">Submit Note</button>

          </div>

        </div>

        <br>

        <div class="panel panel-primary">

          <div class="panel-heading">

            <h4>Notes:</h4>

          </div>

          <div class="panel-body">

            {{#each comments}}

            <div class="comment">

              {{this.body}}<button data-comment={{this._id}} id="deletecomment" class="btn btn-primary pull-right">&times;</button>

            </div>

            {{/each}}

          </div>

        </div>

      </div>

    </div>

  </div>

</div>

{{/each}}